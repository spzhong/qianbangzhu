<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical" >

    <include
        android:id="@+id/invert_info_title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_96px"
        android:layout_alignParentTop="true"
        layout="@layout/titlebar" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/invert_info_btn"
        android:layout_below="@+id/invert_info_title" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/main_blue"
                android:orientation="vertical"
                android:paddingBottom="10dp"
                android:paddingTop="20dp" >

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" >

                    <LinearLayout
                        android:id="@+id/linearLayout1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_gravity="center"
                        android:orientation="vertical"
                        android:padding="20dp" >

                        <TextView
                            android:id="@+id/inert_info_tv1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:text="10.0%"
                            android:textColor="@color/white"
                            android:textSize="@dimen/sp_60px" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginTop="20dp"
                            android:text="预期年化利率"
                            android:textColor="@color/main_invert_gray"
                            android:textSize="@dimen/sp_28px"
                            android:visibility="visible" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/inert_info_img"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_toRightOf="@+id/linearLayout1"
                        android:background="@drawable/invert_cunguantubiao"
                        android:visibility="visible" />
                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal" >

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:padding="5dp" >

                        <TextView
                            android:id="@+id/inert_info_tv2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:text="100.00万"
                            android:textColor="@color/white"
                            android:textSize="@dimen/sp_28px" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginTop="10dp"
                            android:text="借款金额"
                            android:textColor="@color/main_invert_gray"
                            android:textSize="@dimen/sp_28px"
                            android:visibility="visible" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:padding="5dp" >

                        <TextView
                            android:id="@+id/inert_info_tv3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:text="1个月"
                            android:textColor="@color/white"
                            android:textSize="@dimen/sp_28px" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginTop="10dp"
                            android:text="借款期限"
                            android:textColor="@color/main_invert_gray"
                            android:textSize="@dimen/sp_28px"
                            android:visibility="visible" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:padding="5dp" >

                        <TextView
                            android:id="@+id/inert_info_tv4"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:text="100000.00元"
                            android:textColor="@color/white"
                            android:textSize="@dimen/sp_26px" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginTop="10dp"
                            android:text="剩余可投"
                            android:textColor="@color/main_invert_gray"
                            android:textSize="@dimen/sp_26px"
                            android:visibility="visible" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/inert_layout_huakuan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/main_blue"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/inert_info_tv5"
                    android:layout_width="40dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:paddingBottom="10dp"
                    android:paddingTop="10dp"
                    android:text="100%"
                    android:textColor="@color/white"
                    android:textSize="@dimen/sp_24px"
                    android:visibility="visible" />
            </LinearLayout>

            <ProgressBar
                android:id="@+id/inert_info_progress"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="match_parent"
                android:layout_height="5dp"
                android:background="#ffebcc"
                android:max="100"
                android:progress="80"
                android:progressDrawable="@drawable/progressbarnew" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="10dp"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/licai_logo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/licai_logo"
                    android:gravity="center"
                    android:textColor="@color/main_text_blue"
                    android:textSize="@dimen/sp_20px"
                    android:visibility="visible" />

                <TextView
                    android:id="@+id/inert_info_tv6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:gravity="center"
                    android:paddingLeft="10dp"
                    android:text="东莞市广信商业保理有限公司 推荐"
                    android:textColor="@color/main_invert_text"
                    android:textSize="@dimen/sp_24px" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="7dp"
                android:layout_marginTop="10dp"
                android:background="#EBF3F6"
                android:visibility="visible" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="20dp" >

                <TextView
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:text="还款方式"
                    android:textColor="@color/main_invert_text"
                    android:textSize="@dimen/sp_26px" />

                <TextView
                    android:id="@+id/inert_info_tvhuan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="到期一次性付清"
                    android:textColor="@color/main_invert_text_b"
                    android:textSize="@dimen/sp_26px" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="15dp" >

                <TextView
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:text="月还本息"
                    android:textColor="@color/main_invert_text"
                    android:textSize="@dimen/sp_26px" />

                <TextView
                    android:id="@+id/inert_info_tvyue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="100000.00元"
                    android:textColor="@color/main_invert_text_b"
                    android:textSize="@dimen/sp_26px" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="15dp" >

                <TextView
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:text="投标限额"
                    android:textColor="@color/main_invert_text"
                    android:textSize="@dimen/sp_26px" />

                <TextView
                    android:id="@+id/inert_info_tvtou"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="不限"
                    android:textColor="@color/main_invert_text_b"
                    android:textSize="@dimen/sp_26px" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="15dp" >

                <TextView
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:text="起息时间"
                    android:textColor="@color/main_invert_text"
                    android:textSize="@dimen/sp_26px" />

                <TextView
                    android:id="@+id/inert_info_tvqi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="满标后当日计息（天标）"
                    android:textColor="@color/main_invert_text_b"
                    android:textSize="@dimen/sp_26px" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingBottom="20dp"
                android:paddingTop="15dp" >

                <TextView
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:text="剩余时间"
                    android:textColor="@color/main_invert_text"
                    android:textSize="@dimen/sp_26px" />

                <TextView
                    android:id="@+id/inert_info_tvsheng"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="05天01时24分"
                    android:textColor="@color/main_invert_text_b"
                    android:textSize="@dimen/sp_26px" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="7dp"
                android:background="#EBF3F6"
                android:visibility="visible" />

            <LinearLayout
                android:id="@+id/invert_layout_biao"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingBottom="10dp"
                android:paddingTop="10dp" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:background="@drawable/invert_biaodexiangqing" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:text="标的详情"
                    android:textColor="@color/main_invert_text_b"
                    android:textSize="@dimen/sp_26px" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/main_line_gray"
                android:visibility="visible" />

            <LinearLayout
                android:id="@+id/invert_layout_shen"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingBottom="10dp"
                android:paddingTop="10dp" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:background="@drawable/invert_shenhecailiao" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:text="审核材料"
                    android:textColor="@color/main_invert_text_b"
                    android:textSize="@dimen/sp_26px" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/main_line_gray"
                android:visibility="visible" />

            <LinearLayout
                android:id="@+id/invert_layout_tou"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingBottom="10dp"
                android:paddingTop="10dp" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:background="@drawable/invert_toubiaojilu" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:text="投标记录"
                    android:textColor="@color/main_invert_text_b"
                    android:textSize="@dimen/sp_26px" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/main_line_gray"
                android:visibility="visible" />

            <LinearLayout
                android:id="@+id/invert_layout_huan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingBottom="10dp"
                android:paddingTop="10dp" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:background="@drawable/invert_huankuanjilu" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:text="还款记录"
                    android:textColor="@color/main_invert_text_b"
                    android:textSize="@dimen/sp_26px" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/main_line_gray"
                android:visibility="visible" />

            <LinearLayout
                android:id="@+id/invert_layout_zhai"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingBottom="10dp"
                android:paddingTop="10dp" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:background="@drawable/invert_zhaiquanxinxi" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:text="债券记录"
                    android:textColor="@color/main_invert_text_b"
                    android:textSize="@dimen/sp_26px" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="7dp"
                android:background="#EBF3F6"
                android:visibility="visible" />
        </LinearLayout>
    </ScrollView>

    <Button
        android:id="@+id/invert_info_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@drawable/button"
        android:text="倒计时：00:00:00"
        android:textColor="@color/btn_text_color_black" />

</RelativeLayout>