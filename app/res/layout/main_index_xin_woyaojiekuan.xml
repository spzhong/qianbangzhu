<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white" >
   
    <LinearLayout 
        android:layout_width="match_parent"
    	android:layout_height="wrap_content"
    	android:layout_marginBottom="60dp"
    	android:orientation="vertical" >
        <include
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_96px"
        layout="@layout/titlebar" />
        <ScrollView 
          	android:layout_width="match_parent"
    		android:layout_height="wrap_content">
            <LinearLayout 
            	android:layout_width="match_parent"
    			android:layout_height="wrap_content"
    			android:orientation="vertical">
                <LinearLayout 
	        		android:layout_width="match_parent"
	        		android:layout_height="150dp"
	        		android:background="@drawable/woyaojiekunbanner">
	    		</LinearLayout>
	    		<LinearLayout 
			      	android:layout_width="match_parent"
			    	android:layout_height="wrap_content"
			    	android:layout_gravity="center" 
			    	android:gravity="center"
			   		android:background="#F0FDFF">
			        <TextView
			            android:id="@+id/textView1"
			            android:layout_width="wrap_content"
			            android:layout_height="wrap_content"
			            android:text="目前只接受广东地区的借款申请"
			            android:textSize="@dimen/sp_28px"
			            android:padding="20dp" 
			            android:textColor="#333333"/>
	   			</LinearLayout>
			    <LinearLayout 
			      	android:layout_width="match_parent"
			    	android:layout_height="wrap_content"
			    	android:orientation="horizontal"
			    	android:padding="20dp"
			    	android:layout_gravity="center_vertical"
			    	android:gravity="center_vertical"
			   		android:background="#ffffff">
					<LinearLayout 
				      	android:layout_width="0dp"
				    	android:layout_height="wrap_content"
				    	android:layout_weight="1.5">
						<RelativeLayout 
						    android:layout_width="match_parent"
						    android:layout_height="wrap_content">
					        <TextView
					            android:layout_width="wrap_content"
					            android:layout_height="wrap_content"
					            android:layout_alignParentRight="true"
					            android:text="* 姓名"
					            android:textSize="@dimen/sp_28px"
					            android:textColor="#333333"/>
				        </RelativeLayout>
					</LinearLayout>
			        <EditText
			           	android:id="@+id/wyjk_name"
			            android:layout_width="0dp"
			            android:layout_weight="2"
			            android:layout_height="wrap_content"
			            android:layout_marginLeft="20dp"
						android:hint="请输入您的姓名"
						android:background="@null"
			            android:textSize="@dimen/sp_28px"
			            android:textColor="#333333"/>
	    		</LinearLayout>
	    		<View
	                android:layout_width="match_parent"
	                android:layout_height="0.5dp"
	                android:background="@color/main_line_gray" />
	    		<LinearLayout 
			      	android:layout_width="match_parent"
			    	android:layout_height="wrap_content"
			    	android:orientation="horizontal"
			    	android:padding="20dp"
			    	android:layout_gravity="center_vertical"
			    	android:gravity="center_vertical"
			   		android:background="#ffffff">
					<LinearLayout 
				      	android:layout_width="0dp"
				    	android:layout_height="wrap_content"
				    	android:layout_weight="1.5">
						<RelativeLayout 
						    android:layout_width="match_parent"
						    android:layout_height="wrap_content">
					        <TextView
					            android:layout_width="wrap_content"
					            android:layout_height="wrap_content"
					            android:layout_alignParentRight="true"
					            android:text="* 手机号"
					            android:phoneNumber="true"
					            android:textSize="@dimen/sp_28px"
					            android:textColor="#333333"/>
				        </RelativeLayout>
					</LinearLayout>
			        <EditText
			           	android:id="@+id/wyjk_phone"
			            android:layout_width="0dp"
			            android:layout_weight="2"
			            android:layout_height="wrap_content"
			            android:layout_marginLeft="20dp"
						android:hint="请输入您的手机号"
						android:background="@null"
			            android:textSize="@dimen/sp_28px"
			            android:textColor="#333333"/>
	    		</LinearLayout>
	    		<View
	                android:layout_width="match_parent"
	                android:layout_height="0.5dp"
	                android:background="@color/main_line_gray" />
	    		<LinearLayout 
			      	android:layout_width="match_parent"
			    	android:layout_height="wrap_content"
			    	android:orientation="horizontal"
			    	android:padding="20dp"
			    	android:layout_gravity="center_vertical"
			    	android:gravity="center_vertical"
			   		android:background="#ffffff">
					<LinearLayout 
				      	android:layout_width="0dp"
				    	android:layout_height="wrap_content"
				    	android:layout_weight="1.5">
						<RelativeLayout 
						    android:layout_width="match_parent"
						    android:layout_height="wrap_content">
					        <TextView
					            android:layout_width="wrap_content"
					            android:layout_height="wrap_content"
					            android:layout_alignParentRight="true"
					            android:text="* 借款金额"
					            android:textSize="@dimen/sp_28px"
					            android:textColor="#333333"/>
				        </RelativeLayout>
					</LinearLayout>
			        <EditText
			           	android:id="@+id/wyjk_jine"
			            android:layout_width="0dp"
			            android:layout_weight="2"
			            android:layout_height="wrap_content"
			            android:layout_marginLeft="20dp"
			            android:numeric="integer"
						android:hint="请输入借款金额（元）"
						android:background="@null"
			            android:textSize="@dimen/sp_28px"
			            android:textColor="#333333"/>
	    		</LinearLayout>
	    		<View
	                android:layout_width="match_parent"
	                android:layout_height="0.5dp"
	                android:background="@color/main_line_gray" />
	    		<LinearLayout 
			      	android:layout_width="match_parent"
			    	android:layout_height="wrap_content"
			    	android:orientation="horizontal"
			    	android:padding="20dp"
			    	android:layout_gravity="center_vertical"
			    	android:gravity="center_vertical"
			   		android:background="#ffffff">
					<LinearLayout 
				      	android:layout_width="0dp"
				    	android:layout_height="wrap_content"
				    	android:layout_weight="1.5">
						<RelativeLayout 
						    android:layout_width="match_parent"
						    android:layout_height="wrap_content">
					        <TextView
					            android:layout_width="wrap_content"
					            android:layout_height="wrap_content"
					            android:layout_alignParentRight="true"
					            android:text="* 预期筹款期限"
					            android:textSize="@dimen/sp_28px"
					            android:textColor="#333333"/>
				        </RelativeLayout>
					</LinearLayout>
			        <EditText
			           	android:id="@+id/wyjk_chou"
			            android:layout_width="0dp"
			            android:layout_weight="2"
			            android:layout_height="wrap_content"
			            android:layout_marginLeft="20dp"
						android:hint="请输入筹款期限（天）"
						android:numeric="integer"
						android:background="@null"
			            android:textSize="@dimen/sp_28px"
			            android:textColor="#333333"/>
	    		</LinearLayout>
	    		<View
	                android:layout_width="match_parent"
	                android:layout_height="0.5dp"
	                android:background="@color/main_line_gray" />
	    		<LinearLayout 
			      	android:layout_width="match_parent"
			    	android:layout_height="wrap_content"
			    	android:orientation="horizontal"
			    	android:padding="20dp"
			    	android:layout_gravity="center_vertical"
			    	android:gravity="center_vertical"
			   		android:background="#ffffff">
					<LinearLayout 
				      	android:layout_width="0dp"
				    	android:layout_height="wrap_content"
				    	android:layout_weight="1.5">
						<RelativeLayout 
						    android:layout_width="match_parent"
						    android:layout_height="wrap_content">
					        <TextView
					            android:layout_width="wrap_content"
					            android:layout_height="wrap_content"
					            android:layout_alignParentRight="true"
					            android:text="* 所在城市"
					            android:textSize="@dimen/sp_28px"
					            android:textColor="#333333"/>
				        </RelativeLayout>
					</LinearLayout>
			        <EditText
			           	android:id="@+id/wyjk_city"
			            android:layout_width="0dp"
			            android:layout_weight="2"
			            android:layout_height="wrap_content"
			            android:layout_marginLeft="20dp"
						android:hint="请输入您所在的城市"
						android:background="@null"
			            android:textSize="@dimen/sp_28px"
			            android:textColor="#333333"/>
	    		</LinearLayout>
	    		<View
	                android:layout_width="match_parent"
	                android:layout_height="0.5dp"
	                android:background="@color/main_line_gray" />
	    		<LinearLayout 
			      	android:layout_width="match_parent"
			    	android:layout_height="wrap_content"
			    	android:orientation="horizontal"
			    	android:padding="20dp"
			    	android:layout_gravity="center_vertical"
			    	android:gravity="center_vertical"
			   		android:background="#ffffff">
					<LinearLayout 
				      	android:layout_width="0dp"
				    	android:layout_height="wrap_content"
				    	android:layout_weight="1.5">
						<RelativeLayout 
						    android:layout_width="match_parent"
						    android:layout_height="wrap_content">
					        <TextView
					            android:layout_width="wrap_content"
					            android:layout_height="wrap_content"
					            android:layout_alignParentRight="true"
					            android:text="* 借款类型"
					            android:textSize="@dimen/sp_28px"
					            android:textColor="#333333"/>
				        </RelativeLayout>
					</LinearLayout>
			        <Spinner 
			            android:id="@+id/wyjk_type"  
  						android:layout_width="0dp"
  						android:layout_weight="2"  
  						android:layout_height="wrap_content" 
  						android:background="@null"
  						android:entries="@array/jiekuanleixingArray"/>
	    		</LinearLayout>
	    		<View
	                android:layout_width="match_parent"
	                android:layout_height="0.5dp"
	                android:background="@color/main_line_gray" />
            </LinearLayout>
        </ScrollView>
    </LinearLayout>

    <Button
        android:id="@+id/wyjk_shenqing"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:background="@color/title_blue"
        android:textColor="#fff"
        android:textSize="@dimen/sp_36px"
        android:text="立即申请" />
  
</RelativeLayout>